<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ma.primeros_ejercicios_android.Ejercicio1"


    android:weightSum="1">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="100dp"
        android:layout_weight="0.85"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.02"
            android:allowUndo="false"
            android:background="@mipmap/ic_launcher_round"
            android:capitalize="sentences"
            android:elevation="0dp"
            android:ellipsize="middle"
            android:focusableInTouchMode="false"
            android:fontFamily="cursive"
            android:onClick="miFuncion"
            android:text="Mostrare en pantalla el contenido del edit Text"
            android:textSize="45sp"
            android:tooltipText="a ver si funciona esta garcha liquida"
            android:transitionName="@android:string/cancel" />

        <!---  android:layout_weight="0.37" -->


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:drawable/alert_dark_frame"
            android:onClick="miFuncionLimpiar"
            android:text="Cancelar" />


    </LinearLayout>


</LinearLayout>
